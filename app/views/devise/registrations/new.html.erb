<h2 class = "login"><%="#{t('sign_up1')}"%></h2>
<div class = "login">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div>
     <%= f.label :name, t('user_name') %><br />
     <%= f.text_field :name, autofocus: true %>
</div>

  <div class="field">
    <%= f.label :password, t('pass_word') %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %><%=t('characters_minimum')%>)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, t('pass_conf') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "#{t('sign_up')}" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>