<div id="<%= dom_id book %>">
<div align = "center">
<table class = "booklist">
<thead style >
  <tr>
  <th style = "width:20px"> <strong>Author:</strong> </th>

  <th><strong>Genre:</strong></th>
  <th><strong>Year:</strong><th>
  </tr>
</thead>

<tbody>
<td> <%= book.author %> </td>
        
  <td><%= book.genre %></td>

  <td><%= book.year %><td>

</tbody>
</table>
</div>
