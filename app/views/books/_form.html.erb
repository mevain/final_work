    <div class = "col">
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name %>
    </div>

    <div class = "col">
      <%= form.label :language, style: "display: block" %>
      <%= form.text_field :language%>
    </div>
  </div>
  <div class = "row">
    <div class = "col">
      <%= form.label :author, style: "display: block" %>
      <%= form.text_field :author%>
    </div>

    <div class = "col">
      <%= form.label :author_email, style: "display: block" %>
      <%= form.text_field :author_email, value: current_user.email%>
    </div>


